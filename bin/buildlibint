#!/bin/sh

LIBINT2_DIR=libint-2.5.0-beta.2

cd external/libint2
if [ -d "$LIBINT2_DIR" ]; then
  cd $LIBINT2_DIR
else
  echo "Unpacking Libint"
  tar xf "$LIBINT2_DIR".tgz
  cd $LIBINT2_DIR
  ./configure  --prefix=$PWD/.. --with-cxx=$CXX CXXFLAGS='-w -O3 -std=c++17'
fi
echo "Compiling Libint"
make install -j$1
echo "Libint Compiled!"

